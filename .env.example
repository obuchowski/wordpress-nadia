# Database (podman-compose)
MYSQL_ROOT_PASSWORD=change-me-root
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=change-me

# WordPress container
WORDPRESS_DB_HOST=wordpress-mysql:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=${MYSQL_PASSWORD}
WORDPRESS_SITE_URL=http://localhost:8085

# Static export + deploy
# Path inside the container: /var/www/html/static-output
STATIC_OUTPUT_DIR=/home/evgeni/projects-external/wordpress/site/static-output
STATIC_REPO_PATH=/home/evgeni/projects-external/wordpress/static-site-repo
GIT_REMOTE=origin
GIT_BRANCH=main
# Optional override for commit message (defaults to timestamp)
COMMIT_MESSAGE=

# Simple Deploy plugin integration
# Trigger file is written inside the site mount (host-visible)
SIMPLE_DEPLOY_TRIGGER_FILE=/home/evgeni/projects-external/wordpress/site/simple-deploy.trigger
# Optional: only set if the deploy script is mounted into the container and executable
SIMPLE_DEPLOY_SCRIPT=

# Cloudflare (only needed for API-based automation; Pages via GitHub does not require these)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
